	author = {Price, Charles A. and Weitz, Joshua S and Savage, Van M. and Stegen, James and Clarke, Andrew and Coomes, David A. and Dodds, Peter S. and Etienne, Rampal S. and Kerkhoff, Andrew J. and McCulloh, Katherine and Niklas, Karl J. and Olff, Han and Swenson, Nathan G.},
	month = dec,
	year = {2012},
	keywords = {allometry, fractal, kleiber curve, metabolic theory, metabolism, scaling theory, {WBE} model},
