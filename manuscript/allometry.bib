	pages = {87--99},
	file = {Full Text PDF:C\:\\Users\\30022860\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\m3aehzfx.default\\zotero\\storage\\8DE2NN6E\\Chave et al. - 2005 - Tree allometry and improved estimation of carbon s.pdf:application/pdf;Snapshot:C\:\\Users\\30022860\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\m3aehzfx.default\\zotero\\storage\\PXMQ33FB\\s00442-005-0100-x.html:text/html}
