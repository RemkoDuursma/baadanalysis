@article{chen_allocation_2013,
	title = {Allocation of gross primary production in forest ecosystems: allometric constraints and environmental responses},
	volume = {200},
	copyright = {? 2013 The Authors. New Phytologist ? 2013 New Phytologist Trust},
	issn = {1469-8137},
	shorttitle = {Allocation of gross primary production in forest ecosystems},
