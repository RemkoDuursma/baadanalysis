@article{niklas_plant_2004,
	title = {Plant allometry: is there a grand unifying theory?},
	volume = {79},
	issn = {1469-185X},
	shorttitle = {Plant allometry},
	url = {http://onlinelibrary.wiley.com/doi/10.1017/S1464793104006499/abstract},
	doi = {10.1017/S1464793104006499},
	abstract = {The study of size and its biological consequences ? called allometry ? has fascinated biologists for centuries. Recent advances in this area of study have stimulated a renewed interest in these scaling phenomena, especially in terms of the search for mechanistic explanations that transcend mere descriptive phenomenology. These advances are reviewed in the context of plant biology. Allometric derivations are presented that predict how annual growth in total body biomass is partitioned to construct new leaf, stem, and root tissues at the level of an individual plant. Derivations are also presented to predict annual reproductive effort and to predict how the biomass of body parts changes as a function of the number of plants per unit area in communities. The predictions emerging from these derivations are then examined empirically by comparing predicted and observed scaling exponents for each relationship using a world-wide data compendium gathered from the primary literature. These comparisons provide strong statistical support for each of the allometric predictions. This support is taken as evidence that a general unifying allometric theory for plant biology is near at hand. Nevertheless, the validation of this theory requires much additional work and raises a number of procedural and conceptual concerns that must be resolved before a single?global?theory is accepted.},
	language = {en},
	number = {4},
	urldate = {2014-03-04},
	journal = {Biological Reviews},
	author = {Niklas, Karl J.},
	year = {2004},
	keywords = {annual plant growth rates, biomass allocation, body mass, community structure, density effects, organ partitioning, plant reproductive effort, size-correlated changes},
	pages = {871--889},
	file = {Full Text PDF:C\:\\Users\\30022860\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\m3aehzfx.default\\zotero\\storage\\MXZ2F48S\\Niklas - 2004 - Plant allometry is there a grand unifying theory.pdf:application/pdf;Snapshot:C\:\\Users\\30022860\\AppData\\Roaming\\Zotero\\Zotero\\Profiles\\m3aehzfx.default\\zotero\\storage\\TR7G58QN\\abstract.html:text/html}
