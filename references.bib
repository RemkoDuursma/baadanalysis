@Article{luyssaert2008,
  Title                    = {Old-growth forests as global carbon sinks},
  Author                   = {Luyssaert, Sebastiaan and Schulze, E.-Detlef and B{\~{A}}{\P}rner, Annett and Knohl, Alexander and Hessenm{\~{A}}{\P}ller, Dominik and Law, Beverly E. and Ciais, Philippe and Grace, John},
